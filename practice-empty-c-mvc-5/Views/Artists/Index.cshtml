
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <style>
        span.field-validation-error{
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Artistas</h1>
        <a class="popup btn btn-primary" href="/artists/save/0" style="margin-bottom:20px; margin-top:20px">Agregar</a>
        <table id="dataTable">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Artista</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var oTable = $('#dataTable').DataTable({
                "ajax": {
                    "url": '/artists/GetArtists',
                    "type": 'get',
                    "datatype": 'json'
                },
                "columns": [
                    { "data": 'art_code', 'autowidth': true },
                    { "data": 'art_name', 'autowidth': true },
                    {
                        "data": 'art_id', 'width': '50px', 'render': function (data) {
                            return '<a class="popup" href="/artists/Save/' + data + '">Editar</a>'
                        }
                    },
                    {
                        "data": 'art_id', 'width': '50px', 'render': function (data) {
                            return '<a class="popup" href="/artists/Delete/' + data + '">Eliminar</a>'
                        }
                    }
                ]
            })

            $('.container').on('click', 'a.popup', function (e) {
                e.preventDefault();
                openPopup($(this).attr('href'));
            })

            function openPopup(pageUrl) {
                var $pageContent = $('<div/>');
                $pageContent.load(pageUrl, function () {
                    $('#popupForm', $pageContent).removeData('validator');
                    $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                    $.valdiator.unobtrusive.parse('form');
                });

                $dialog = $('<div class="popupWindow" style="overflow:auto"></div>')
                    .html($pageContent)
                    .dialog({
                        draggable: false,
                        autoOpen: false,
                        resizable: false,
                        model: true,
                        title: 'Popup Dialog',
                        height: 550,
                        width: 600,
                        close: function () {
                            $dialog.dialog('destroy').remove()
                        }
                    })

                $('.popupWindow').on('submit', '#popupForm', function (e) {
                    var url = $('#popupForm')[0].action;
                    $.ajax({
                        type: 'POST',
                        url: url,
                        data: $('#popupForm').serialize(),
                        success: function (data) {
                            if (data.status) {
                                $dialog.dialog('close');
                                oTable.ajax.reload();
                            }
                        }
                    })
                    e.preventDefault();
                })
                $dialog.dialog('open');
            }
        })
    </script>
</body>
</html>
